{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inventories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory in inventories %}
            <tr>
                <td><a href="{{ path('inventory_show', { 'id': inventory.id }) }}">{{ inventory.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('inventory_show', { 'id': inventory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('inventory_edit', { 'id': inventory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('inventory_new') }}">Create a new inventory</a>
        </li>
    </ul>
{% endblock %}
