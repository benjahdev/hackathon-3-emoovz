{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stuffs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Dimensionheight</th>
                <th>Dimensionwidth</th>
                <th>Dimensiondeep</th>
                <th>Isweight</th>
                <th>Isfragile</th>
                <th>Iscustom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stuff in stuffs %}
            <tr>
                <td><a href="{{ path('stuff_show', { 'id': stuff.id }) }}">{{ stuff.id }}</a></td>
                <td>{{ stuff.name }}</td>
                <td>{{ stuff.dimensionHeight }}</td>
                <td>{{ stuff.dimensionWidth }}</td>
                <td>{{ stuff.dimensionDeep }}</td>
                <td>{% if stuff.isWeight %}Yes{% else %}No{% endif %}</td>
                <td>{% if stuff.isFragile %}Yes{% else %}No{% endif %}</td>
                <td>{% if stuff.isCustom %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('stuff_show', { 'id': stuff.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('stuff_edit', { 'id': stuff.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stuff_new') }}">Create a new stuff</a>
        </li>
    </ul>
{% endblock %}
